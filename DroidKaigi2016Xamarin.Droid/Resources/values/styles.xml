<resources>

    <!-- Text -->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle.OfList">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSub">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/grey600</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!-- Border -->
    <style name="Border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_small</item>
        <item name="android:background">@color/grey200</item>
    </style>

    <style name="Border.SpaceLeft">
        <item name="android:layout_marginLeft">72dp</item>
    </style>

    <!-- Component -->
    <style name="BaseRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="ClickCover">
        <item name="android:background">@drawable/clickable</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/tag_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/tag_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/tag_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/tag_padding_vertical</item>
        <item name="android:paddingRight">@dimen/tag_padding_horizontal</item>
        <item name="android:paddingStart">@dimen/tag_padding_horizontal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/grey600</item>
    </style>

    <style name="ToolbarSearchEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/white_alpha_95</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:drawableLeft">@drawable/ic_search_white_24dp</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:drawableRight">@drawable/ic_close_white_18dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@color/white_alpha_95</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_alpha_40</item>
        <item name="android:textColorHighlight">@color/black_alpha_12</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchResultAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme600</item>
    </style>

    <style name="SessionDetailToolbarTitle">
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="SessionDetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="FabTheme">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>

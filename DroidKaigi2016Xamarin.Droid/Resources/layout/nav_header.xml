<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header"
    android:background="@drawable/img_default_cover"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_30" />

    <ImageView
        android:id="@+id/img_nav_header_icon"
        android:layout_width="@dimen/drawer_header_icon"
        android:layout_height="@dimen/drawer_header_icon"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_nav_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_nav_header_icon"
        android:layout_marginEnd="@dimen/spacing"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing_small"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nav_header_title"
        android:layout_marginBottom="@dimen/spacing"
        android:layout_marginEnd="@dimen/spacing"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:text="@string/tag_line"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small" />

</RelativeLayout>
